<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".launch_screen">

    <TextView
        android:id="@+id/launcherQuizzyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/quizzyLaunch"
        android:textColor="#000"
        android:textSize="50sp" />

    <View
        android:id="@+id/lineAbovePvtLtd"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="0dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/verved_logo"
        android:background="#000"/>

    <ImageView
        android:id="@+id/verved_logo"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        android:src="@drawable/verved_logo" />
</RelativeLayout>